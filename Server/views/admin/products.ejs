<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <section>
        <div >
            <div class="productos">
            <h1>My Products</h1>
            <p>List of all Products</p>
            <!-- JS -->
            <% if (prods.length > 0 ){%>
            <% for (let product of prods){%>

            <div class="prod">
                <div class="imag">
                    <h1> imagen: <%= product.imageUrl %> </h1>

                </div>
                <div class="item">
                    <h1> titulo: <%= product.title %> </h1>
                    <h1> id: <%= product.id %> </h1>
                    <h1> precio: <%= product.price %> </h1>
                    <h1> descripcion: <%= product.description %> </h1>

                </div>

                <a href="/admin/edit-product" class="btn">EDIT</a>
                <form action="/admin/delete-prod" method="post">
                    <a href="/admin/delete-prod" class="btn">DELETE</a>
                </form>
                

            </div>

            <%}%>
            <%}else{%>
            <h1>No product found</h1>
            <%}%>
            </div>
        </div>
    
    </section>
    
<%- include('../includes/end.ejs') %>